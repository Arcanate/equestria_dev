### PL Combats the FLT Decisions ###

TAL_combat_flt_as_pl = {
	
	TAL_pl_fight_flt_mission = {
		
		icon = GFX_decision_red_star
		available = {
			OR = {
				has_country_flag = TAL_flt_has_been_removed_for_pl		
				has_country_flag = TAL_civilwar
			}
		}
		
		activation = {
#			has_completed_focus = TAL_remove_the_FLT_influence
		}
		
		fire_only_once = yes

		days_mission_timeout = 60
		
		remove_effect = {
		}
		complete_effect = {
		}

		timeout_effect = {

			add_to_variable = {
				var = progressagainstflt_aspl
				value = -5
			}
			
			add_stability = -0.015
			add_popularity = {
				ideology = democratic
				popularity = -0.015
			}
			
				if = {
					limit = {
						check_variable = { var = progressagainstflt_aspl value = 95 compare = greater_than_or_equals }
					}
						country_event = { id = talouse.1015 }	#Remove the FLT Party			
						set_country_flag = TAL_flt_has_been_removed_for_pl		
						if = { 
							limit = {
								has_idea = TAL_flt_influence_increase
								}
							remove_ideas = TAL_flt_influence_increase
						}
						if = { 
							limit = {
								has_idea = TAL_flt_influence
								}
							remove_ideas = TAL_flt_influence
						}
					}
					
				if = {
					limit = {
						check_variable = { var = progressagainstflt_aspl value = 55 compare = greater_than_or_equals }
					}	
						country_event = { # Terror attacks in 5 days +/- 120 hours
							  id = talouse.1016
							  days = 5
							  random = 120
						 }
					}
					
				if = {
					limit = {
						check_variable = { var = progressagainstflt_aspl value = 0 compare = less_than_or_equals }
					}
					country_event = { id = talouse.1017 }
				}
				hidden_effect = {
					activate_mission = TAL_pl_fight_flt_mission
				}
			custom_effect_tooltip = progressagainstfltaspl_points
			}
