			add_popularity = {
				ideology = communism
				popularity = -0.015
			}
			
				if = {
					limit = {
						check_variable = { var = progressagainstminers value = 95 compare = greater_than_or_equals }
					}
						country_event = { id = talouse.1025 }						
						set_country_flag = TAL_syndi
						
					}
				if = {
					limit = {
						check_variable = { var = progressagainstminers value = 0 compare = less_than_or_equals }
					}
					country_event = { id = talouse.1026 }
				}

				hidden_effect = {
					activate_mission = TAL_syndies_fight_miners_mission
				}
