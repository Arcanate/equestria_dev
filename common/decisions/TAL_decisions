### LRN combats FLT Decisions ###

TAL_combat_flt = {
	
	TAL_lrn_fight_flt_mission = {
		
		icon = GFX_decision_red_star
		available = {
			OR = {
				has_country_flag = TAL_flt_has_been_removed	
				has_country_flag = TAL_civilwar
			}
		}
		
		activation = {
			has_completed_focus = TAL_start_purging_FLT_members
		}
		
		fire_only_once = yes

		days_mission_timeout = 45
		
		remove_effect = {
		}
		complete_effect = {
		}

		timeout_effect = {

			add_to_variable = {
				var = progressagainstflt
				value = -5
			}
			
			add_stability = -0.015
			add_popularity = {
				ideology = fascism
				popularity = -0.015
			}
			
				if = {
					limit = {
						check_variable = { var = progressagainstflt value = 95 compare = greater_than_or_equals }
					}
						country_event = { id = talouse.1013 }						
						set_country_flag = TAL_flt_has_been_removed	
					}
				if = {
					limit = {
						check_variable = { var = progressagainstflt value = 0 compare = less_than_or_equals }
					}
					country_event = { id = talouse.1012 }
				}
				hidden_effect = {
					activate_mission = TAL_lrn_fight_flt_mission
                    country_event = { # Terror attacks in 5 days +/- 120 hours
                          id = talouse.1014
                          days = 5
                          random = 120
                     }
				}
			custom_effect_tooltip = progressagainstflt_points
			}
		ai_will_do = {
			factor = 800
		}
	}
	
	TAL_destroy_the_teachings_of_flt = {

